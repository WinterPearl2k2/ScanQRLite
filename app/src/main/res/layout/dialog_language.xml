<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/list_item_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/item_enlish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="24sp"
            android:fontFamily="@font/agencyb"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:button="@android:color/transparent"
            android:background="@drawable/cus_item_language"/>

        <RadioButton
            android:id="@+id/item_france"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="France"
            android:textSize="24sp"
            android:fontFamily="@font/agencyb"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:button="@android:color/transparent"
            android:background="@drawable/cus_item_language"/>

        <RadioButton
            android:id="@+id/item_germany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Germany"
            android:textSize="24sp"
            android:fontFamily="@font/agencyb"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:button="@android:color/transparent"
            android:background="@drawable/cus_item_language"/>

        <RadioButton
            android:id="@+id/item_china"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="China"
            android:textSize="24sp"
            android:fontFamily="@font/agencyb"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:button="@android:color/transparent"
            android:background="@drawable/cus_item_language"/>

        <RadioButton
            android:id="@+id/item_korea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Korea"
            android:textSize="24sp"
            android:fontFamily="@font/agencyb"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:button="@android:color/transparent"
            android:background="@drawable/cus_item_language"/>
        <RadioButton
            android:id="@+id/item_vietnam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vietnam"
            android:textSize="24sp"
            android:fontFamily="@font/agencyb"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:button="@android:color/transparent"
            android:background="@drawable/cus_item_language"/>


    </RadioGroup>
</RelativeLayout>