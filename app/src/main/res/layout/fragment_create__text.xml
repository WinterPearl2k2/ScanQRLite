<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment"
    tools:context=".create.create_item.Create_Text">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/agencyb"
        android:text="Create"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="18dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="360dp"
                android:layout_height="155dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/normal_btn"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:text="Content: "
                android:textSize="20dp"
                android:textColor="@color/color_2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/text_content"
                android:layout_marginLeft="15dp"
                android:text="Enter text here"
                android:textSize="20dp"
                android:textColor="@color/color_1"/>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="26dp">

        <ImageButton
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/ic_button" />

        <ImageView
            android:id="@+id/img_ads"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_create"
            android:layout_marginTop="140dp"
            android:background="@drawable/img_ads_test" />

        <ImageButton
            android:id="@+id/btn_text"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_below="@id/img_ads"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_yellow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/ic_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="295dp"
            android:fontFamily="@font/agencyr"
            android:text="Text"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <ImageButton
            android:id="@+id/btn_URL"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_below="@id/img_ads"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_while" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="167dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/ic_url" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="295dp"
            android:fontFamily="@font/agencyr"
            android:text="URL"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <ImageButton
            android:id="@+id/btn_wifi"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_below="@id/img_ads"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_while" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/ic_wifi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="308dp"
            android:layout_marginTop="295dp"
            android:fontFamily="@font/agencyr"
            android:text="Wifi"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </RelativeLayout>
</RelativeLayout>