<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment"
    tools:context=".create.Create">

    <RelativeLayout
        android:id="@+id/layout_btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/title_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agencyb"
            android:paddingLeft="30dp"
            android:paddingTop="40dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Create"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.google.android.gms.ads.AdView
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:id="@+id/adsView_Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/container_btn_create"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:layout_gravity="center_horizontal">
        </com.google.android.gms.ads.AdView>

        <RadioGroup
            android:id="@+id/container_btn_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:layout_toLeftOf="@id/btn_url"
                    android:background="@drawable/ic_create_text_while"
                    android:button="@android:color/transparent"
                    android:elevation="2dp"/>

                <RadioButton
                    android:id="@+id/btn_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_create_url_while"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/btn_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_toRightOf="@id/btn_url"
                    android:background="@drawable/ic_create_wifi_while"
                    android:button="@android:color/transparent" />
            </RelativeLayout>
        </RadioGroup>

        <FrameLayout
            android:id="@+id/create_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/adsView_Create"
            android:layout_below="@+id/title_create"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

</RelativeLayout>