<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment"
    tools:context=".create.create_item.Create_Text">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/agencyb"
        android:text="Create"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_button_while"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:text="Content: "
                android:textColor="@color/color_2"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_content"
                android:layout_marginStart="32dp"
                android:text="Enter URL here"
                android:textSize="20dp"
                android:textColor="@color/color_1"/>
            <ImageButton
                android:id="@+id/btn_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@drawable/ic_button"
                android:layout_below="@id/editText"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/img_ads"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/img_ads_test" />

        <ImageButton
            android:id="@+id/btn_text"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@id/img_ads"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_create_text_yellow" />

        <ImageButton
            android:id="@+id/btn_URL"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@id/img_ads"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_create_url_while" />


        <ImageButton
            android:id="@+id/btn_wifi"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@id/img_ads"
            android:layout_marginStart="273dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_icon_create_wifi_while" />


    </RelativeLayout>
</RelativeLayout>